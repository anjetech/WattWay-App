<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_loadshedding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadsheddingActivity">

    <!-- ─────────────── Top block: full-bleed header ─────────────── -->
    <View
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#50AEF8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Loadshedding Schedule"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="@id/topBar"
        android:gravity="center" />

    <!-- ─────────────── Bottom block: bottom nav (same as other pages) ─────────────── -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled" />

    <!-- ─────────────── Middle block: fills between header and bottom nav ─────────────── -->
    <ScrollView
        android:id="@+id/middleBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search bar directly under the header -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchCard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search_24"
                        android:contentDescription="@string/search" />

                    <EditText
                        android:id="@+id/etSearchArea"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Search area (e.g., Stellenbosch Central)"
                        android:background="@android:color/transparent"
                        android:paddingStart="12dp"
                        android:inputType="text" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Placeholder cards/content for the API results -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSelectedArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSelectedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Area"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tvSelectedArea"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stellenbosch Central"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipStage"
                            style="@style/Widget.Material3.Chip.Assist.Elevated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stage 2" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBlock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block 7"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvActiveTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Loadshedding"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvActiveEnds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ends at 12:30 today"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTodayHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today - Monday, 1 Sep"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvSlot1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="02:00 - 04:30  •  Completed"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/tvSlot2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10:00 - 12:30  •  Currently Active"
                            android:padding="8dp"
                            android:background="#FFF4D8" />

                        <TextView
                            android:id="@+id/tvSlot3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="18:00 - 20:30  •  Scheduled"
                            android:padding="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
